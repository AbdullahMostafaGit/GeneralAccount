                    <td>
                        @Html.DisplayFor(modelItem => item.LIQ_CR)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FLAG_TR)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FL)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.SORTBY)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.s_type_____)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CHK_NAV)
                    </td>




                    <td>
                        @Html.ActionLink("Edit", "Edit", new { code = item.CODE }) |
                        @Html.ActionLink("Details", "Details", new { code = item.CODE }) |
                        @Html.ActionLink("Delete", "Delete", new { code = item.CODE })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
